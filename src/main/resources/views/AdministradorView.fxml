<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <children>
              <HBox>
                 <children>
                     <Label fx:id="textoHolaUsuario" styleClass="label-title" text="Hola," />
                 </children>
              </HBox>
              <Label styleClass="nebula-title" text="NEBULA" textAlignment="CENTER">
                  <VBox.margin>
                      <Insets top="10.0" />
                  </VBox.margin>
              </Label>
      
              <VBox alignment="CENTER" maxWidth="280.0" prefHeight="353.0" prefWidth="280.0" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15; -fx-padding: 20;">
                  <VBox.margin>
                      <Insets bottom="5.0" top="20.0" />
                  </VBox.margin>
         <children>
                     <Button maxWidth="Infinity" onAction="#onGestionarTransacciones" styleClass="button" text="Gestionar Transacciones" />
                     <Button maxWidth="Infinity" onAction="#onGestionarUsuarios" styleClass="button" text="Gestionar Usuarios" />
                     <Button maxWidth="Infinity" onAction="#onGestionarCuentasBancarias" styleClass="button" text="Gestionar Cuentas Bancarias" />
                     <Button maxWidth="Infinity" onAction="#onVerEstadisticas" styleClass="button" text="Ver Estadísticas" />
                     <Button maxWidth="Infinity" onAction="#onEditarPerfil" styleClass="button" text="Editar Perfil" />
                     <Button maxWidth="Infinity" onAction="#onCerrarSesion" styleClass="button" text="Cerrar sesión" />
         </children>
              </VBox>
      
              <HBox alignment="CENTER" spacing="8.0">
         <children>
                     <Label styleClass="label-subtitle" text="¿Necesitas ayuda?" />
                     <Hyperlink onAction="#onContactenos" styleClass="hyperlink" text="Contáctanos" />
         </children>
              </HBox>
          </children>
   
       </VBox>
   </children>
</AnchorPane>
