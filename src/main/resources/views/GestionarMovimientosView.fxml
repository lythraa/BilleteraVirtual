<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="700.0" prefWidth="1200.0" styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.billeteravirtual.controller.GestionarMovimientosController">
   <children>
       <VBox alignment="CENTER" spacing="20.0">
          <children>
              <HBox spacing="20.0">
                 <children>
                     <Button onAction="#onVolver" styleClass="button" text="Volver" />
                     <Label fx:id="lblTitulo" styleClass="label-title" text="Historial de Movimientos">
                         <HBox.margin>
                             <Insets left="250.0" />
                         </HBox.margin>
                         <font>
                             <Font name="MS UI Gothic" size="32.0" />
                         </font>
                     </Label>
                 </children>
              </HBox>
      
              <HBox alignment="CENTER" spacing="30.0">
         <children>
                     <VBox alignment="TOP_CENTER" prefWidth="1100.0" spacing="15.0">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                               <children>
                                   <Button onAction="#onRefrescar" styleClass="button" text="Refrescar tabla" />
                               </children>
                            </HBox>
                            <TableView fx:id="tablaMovimientos" prefHeight="450.0" styleClass="table-view-custom">
                                <columns>
                              <TableColumn fx:id="columnaFecha" prefWidth="120.0" text="Fecha" />
                                    <TableColumn fx:id="columnaTipo" prefWidth="120.0" text="Tipo" />
                                    <TableColumn fx:id="columnaMonto" prefWidth="155.0" text="Monto" />
                                    <TableColumn fx:id="columnaDestino" prefWidth="224.0" text="Cuenta Destino" />
                                    <TableColumn fx:id="columnaCategoria" prefWidth="256.0" text="Categoría" />
                                    <TableColumn fx:id="columnaDescripcion" prefWidth="105.0" text="Descripción" />
                                </columns>
                            </TableView>
                            <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
                               <children>
                                   <Button onAction="#onGenerarReporte" styleClass="button" text="Generar Reporte" />
                              <Button onAction="#onRepetirMovimiento" styleClass="button" text="Realizar nuevamente" />
                               </children>
                            </HBox>
                        </children>
                     </VBox>
         </children>
              </HBox>
          </children>
       </VBox>
   </children>
</StackPane>
