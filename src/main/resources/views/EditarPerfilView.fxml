<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" prefWidth="400.0" styleClass="root" stylesheets="@../css/style.css"
           xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="co.edu.uniquindio.poo.billeteravirtual.controller.EditarPerfilController">
    <VBox alignment="CENTER" maxWidth="300.0" spacing="5.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="40.0"/>
        </padding>
        <Label styleClass="titulo-editar" text="Editar Perfil">
            <padding>
                <Insets bottom="30.0"/>
            </padding>
            <VBox.margin>
                <Insets bottom="30.0"/>
            </VBox.margin>
        </Label>

        <Label styleClass="label-title" text="Nombre completo"/>
        <TextField fx:id="campoNombre"/>

        <Label styleClass="label-title" text="Correo electrónico"/>
        <TextField fx:id="campoCorreo"/>

        <Label styleClass="label-title" text="Número de teléfono"/>
        <TextField fx:id="campoTelefono"/>

        <Label styleClass="label-title" text="Dirección"/>
        <TextField fx:id="campoDireccion"/>

        <Label styleClass="label-title" text="Nueva contraseña"/>
        <PasswordField fx:id="campoContrasena"/>

        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20.0"/>
            </padding>
            <Button onAction="#onVolver" styleClass="button" text="Volver"/>
            <Button onAction="#onGuardarCambios" styleClass="button" text="Guardar"/>
        </HBox>
    </VBox>
</StackPane>
