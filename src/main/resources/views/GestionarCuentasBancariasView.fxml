<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="700.0" prefWidth="1200.0" styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.billeteravirtual.controller.GestionarCuentasController">
    <children>
        <VBox spacing="20.0" StackPane.alignment="CENTER">
            <children>
                <HBox spacing="20.0">
                    <children>
                        <Button onAction="#onVolver">
                            <graphic>
                                <ImageView fx:id="iconoVolver" fitHeight="20.0" fitWidth="20.0" preserveRatio="true" />
                            </graphic>
                        </Button>
                        <Label styleClass="" text="Gestión de Cuentas Bancarias">
                            <HBox.margin>
                                <Insets left="200.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <VBox prefHeight="569.0" prefWidth="317.0" spacing="15.0" styleClass="formulario-box">
                            <padding>
                                <Insets bottom="20.0" left="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label styleClass="" text="Formulario Cuenta Bancaria">
                                    <padding>
                                        <Insets bottom="10.0" />
                                    </padding>
                                </Label>
                                <GridPane hgap="15" vgap="15">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" />
                                        <ColumnConstraints />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>
                                    <children>
                                        <Label text="ID Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <TextField fx:id="campoIdUsuario" promptText="ID del usuario" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label text="Banco:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <TextField fx:id="campoNombreBanco" promptText="Ej. Bancolombia" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label text="No. Cuenta:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                        <TextField fx:id="campoNumeroCuenta" promptText="0000123456" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                        <Label text="Saldo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                        <TextField fx:id="campoSaldo" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                        <Label text="Tipo Cuenta" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                        <ComboBox fx:id="comboTipoCuenta" prefHeight="46.0" prefWidth="185.0" promptText="Seleccionar..." styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    </children>
                                </GridPane>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <VBox.margin>
                                        <Insets top="30.0" />
                                    </VBox.margin>
                                    <children>
                                        <Button onAction="#onAgregar" styleClass="button" text="Agregar" />
                                        <Button onAction="#onEditar" styleClass="button" text="Editar" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <VBox alignment="TOP_CENTER" prefHeight="569.0" prefWidth="795.0" spacing="15.0">
                            <children>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <padding>
                                        <Insets top="10.0" />
                                    </padding>
                                    <children>
                                        <TextField fx:id="campoBusqueda" promptText="Buscar cuenta por ID usuario..." styleClass="search-bar" />
                                        <Button onAction="#onBuscar" styleClass="button" text="Buscar" />
                                    </children>
                                </HBox>
                                <VBox prefHeight="451.0" prefWidth="751.0">
                                    <padding>
                                        <Insets top="10" />
                                    </padding>
                                    <children>
                                        <TableView fx:id="tablaCuentas" prefHeight="356.0" prefWidth="751.0" styleClass="table-view-custom">
                                            <columns>
                                                <TableColumn fx:id="columnaIdUsuario" prefWidth="120.0" text="ID Usuario" />
                                                <TableColumn fx:id="columnaNombreUsuario" prefWidth="160.0" text="Nombre Usuario" />
                                                <TableColumn fx:id="columnaBanco" prefWidth="140.0" text="Banco" />
                                                <TableColumn fx:id="columnaNumeroCuenta" prefWidth="140.0" text="N° Cuenta" />
                                                <TableColumn fx:id="columnaSaldo" prefWidth="80.0" text="Saldo" />
                                                <TableColumn fx:id="columnaTipoCuenta" prefWidth="110.0" text="Tipo" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>
                                <HBox alignment="BOTTOM_RIGHT" prefHeight="15.0" prefWidth="556.0">
                                    <children>
                                        <Button onAction="#onEliminar" prefHeight="29.0" prefWidth="94.0" styleClass="button" text="Eliminar" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
